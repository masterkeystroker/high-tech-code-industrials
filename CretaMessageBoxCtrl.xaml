<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CretaBase"
    xmlns:lex="http://schemas.root-project.org/xaml/presentation"
	mc:Ignorable="d"
	x:Class="CretaBase.CretaMessageBoxCtrl"
	x:Name="UserControl"
	d:DesignWidth="720" d:DesignHeight="920" Width="800">
	<UserControl.Resources>
		<!--Hides control if boolean value is true-->
        <local:BooleanToVisibilityConverter x:Key="HiddenIfTrue" ValueWhenTrue="Hidden" ValueWhenFalse="Visible"/>
        <!--Hides control if boolean value is false-->
        <local:BooleanToVisibilityConverter x:Key="HiddenIfFalse" ValueWhenTrue="Visible" ValueWhenFalse="Hidden"/>
        <!--Collapses control if boolean value is true-->
        <local:BooleanToVisibilityConverter x:Key="CollapsedIfTrue" ValueWhenTrue="Collapsed" ValueWhenFalse="Visible"/>
        <!--Collapses control if boolean value is false-->
        <local:BooleanToVisibilityConverter x:Key="CollapsedIfFalse" ValueWhenTrue="Visible" ValueWhenFalse="Collapsed"/>
	</UserControl.Resources>
	<Grid Margin="0,0,0,100" VerticalAlignment="Center" MinWidth="{Binding MinWidth}" Height="auto" HorizontalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions> 

		<Rectangle Margin="0" RadiusY="10" RadiusX="10" Style="{DynamicResource CretaRectangleBackground}" Grid.RowSpan="2" d:LayoutOverrides="GridBox">
			<Rectangle.Fill>
				<SolidColorBrush Color="{DynamicResource Cretaprint_Gris_Fondo}"/>
			</Rectangle.Fill>
			<Rectangle.Stroke>
				<SolidColorBrush Color="{DynamicResource CretaPrint_BorderWindow}"/>
			</Rectangle.Stroke>
		</Rectangle>
		<GroupBox Margin="8,8,8,5" Style="{DynamicResource CretaGroupBox}" MinHeight="{Binding MinHeightContainer}">
			<Grid HorizontalAlignment="Stretch" MaxHeight="300" Margin="0,5,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions> 
<!--			<StackPanel Margin="0" Orientation="Horizontal" VerticalAlignment="Center"> -->
					<Image Visibility="{Binding IsWarningImgVisible,Converter={StaticResource CollapsedIfFalse}}" Source="/CretaBase;component/Images/alert.png" Stretch="Fill" Width="70" Height="70" Margin="10,5,10,0"/>
					<Image Visibility="{Binding IsErrorImgVisible,Converter={StaticResource CollapsedIfFalse}}" Source="/CretaBase;component/Images/Stop.png" Stretch="Fill" Width="64" Height="64" Margin="13,5,10,0"/>
					<ScrollViewer VerticalScrollBarVisibility="auto"  Grid.Column="1">
						<TextBlock Text="{Binding StrMessage}" HorizontalAlignment="Left" TextWrapping="Wrap" Style="{DynamicResource CretaTextBlock}" Margin="25" FontSize="16" VerticalAlignment="Center"/>
					</ScrollViewer>
<!--			</StackPanel> -->
			</Grid> 
		</GroupBox>
		<StackPanel x:Name="Ok" Margin="5" HorizontalAlignment="Center" Visibility="{Binding IsOkVisible,Converter={StaticResource CollapsedIfFalse}}" Grid.RowSpan="2" Orientation="Horizontal" d:LayoutOverrides="GridBox" Grid.Row="1">
            <Button  Command="{Binding CretaMsgBoxResultCommand}" CommandParameter="OK" Width="{Binding ButtonSize}" x:Name="Btn_Cancel" Tag="{lex:LocText CretaBase:Strings:G_OK}" Margin="10" Style="{DynamicResource CretaButton1}" BorderThickness="1" Height="{Binding ButtonSize}" HorizontalAlignment="Center" d:LayoutOverrides="Width, Height" VerticalAlignment="Center">
				<Image Height="{Binding ButtonImgSize}" Source="/CretaBase;component/Images/apply.png" Stretch="Fill" Width="{Binding ButtonImgSize}" Margin="0,5,0,0"/>
			</Button>
		</StackPanel>
		<StackPanel x:Name="Yes_No_Cancel" Margin="5" HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="1">
			<Button Command="{Binding CretaMsgBoxResultCommand}" CommandParameter="YES" Visibility="{Binding IsYesNoVisible,Converter={StaticResource CollapsedIfFalse}}" Width="{Binding ButtonSize}" x:Name="Btn_Save1" Tag="{lex:LocText CretaBase:Strings:G_YES}" Margin="10" Style="{DynamicResource CretaButton1}" BorderThickness="1" Height="{Binding ButtonSize}" d:LayoutOverrides="Height">
				<Image Height="{Binding ButtonImgSize}" Source="/CretaBase;component/Images/check.png" Stretch="Fill" Width="{Binding ButtonImgSize}" Margin="0,5,0,0"/>
			</Button>
            <Button Command="{Binding CretaMsgBoxResultCommand}" CommandParameter="NO" Visibility="{Binding IsYesNoVisible,Converter={StaticResource CollapsedIfFalse}}" Width="{Binding ButtonSize}" x:Name="Btn_Save_Copy1" Tag="{lex:LocText CretaBase:Strings:G_NO}" Margin="10" Style="{DynamicResource CretaButton1}" BorderThickness="1" Height="{Binding ButtonSize}" d:LayoutOverrides="Height">
				<Image Height="{Binding ButtonImgSize}" Source="/CretaBase;component/Images/delete.png" Stretch="Fill" Width="{Binding ButtonImgSize}" Margin="0,5,0,0"/>
			</Button>
            <Button Command="{Binding CretaMsgBoxResultCommand}" CommandParameter="CANCEL" Visibility="{Binding IsCancelVisible,Converter={StaticResource CollapsedIfFalse}}" Width="{Binding ButtonSize}" x:Name="Btn_Cancel1" Tag="{lex:LocText CretaBase:Strings:G_CANCEL}" Margin="50,10,10,10" Style="{DynamicResource CretaButton1}" BorderThickness="1" Height="{Binding ButtonSize}" d:LayoutOverrides="Width, Height">
				<Image Height="{Binding ButtonImgSize}" Source="/CretaBase;component/Images/Close2.png" Stretch="Fill" Width="{Binding ButtonImgSize}" Margin="0,10,0,0"/>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>