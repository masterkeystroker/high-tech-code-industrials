<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="CretaSeparator" TargetType="{x:Type Separator}">
		<Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
		<Setter Property="Margin" Value="0,2,0,2"/>
		<Setter Property="Focusable" Value="false"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Separator}">
					<Grid x:Name="LayoutRoot" Height="2">
						<StackPanel>
							<Path Data="M14,100 L100,100" Stretch="Fill" Height="1">
								<Path.Stroke>
									<LinearGradientBrush EndPoint="1,1" StartPoint="0,1">
										<GradientStop Color="Black" Offset="0.5"/>
										<GradientStop Color="Black" Offset="0.5"/>
										<GradientStop Color="#00000000"/>
										<GradientStop Color="#00000000" Offset="1"/>
										<GradientStop Color="Black" Offset="0.2"/>
										<GradientStop Color="Black" Offset="0.8"/>
									</LinearGradientBrush>
								</Path.Stroke>
							</Path>
							<Path Data="M14,100 L100,100" Stretch="Fill" Height="1" Opacity="0.2">
								<Path.Stroke>
									<LinearGradientBrush EndPoint="1,1" StartPoint="0,1">
										<GradientStop Color="White" Offset="0.5"/>
										<GradientStop Color="White" Offset="0.5"/>
										<GradientStop/>
										<GradientStop Offset="1"/>
										<GradientStop Color="White" Offset="0.2"/>
										<GradientStop Color="White" Offset="0.8"/>
									</LinearGradientBrush>
								</Path.Stroke>
							</Path>
						</StackPanel>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
    <ControlTemplate x:Key="CretaSeparatorVerticalThin" TargetType="{x:Type Separator}">
        <StackPanel Orientation="Horizontal">
            <Grid Background="#FF999999" Width="1"/>
            <Grid Background="Gray" Width="1"/>
        </StackPanel>
    </ControlTemplate>
    <!-- Resource dictionary entries should be defined here. -->
</ResourceDictionary>