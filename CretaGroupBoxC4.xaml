<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<BorderGapMaskConverter x:Key="BorderGapMaskConverter"/>
	<Style x:Key="CretaGroupBoxThinC4" TargetType="{x:Type GroupBox}">
		<Setter Property="BorderBrush" Value="#D5DFE5"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type GroupBox}">
					<Grid SnapsToDevicePixels="true" Background="{TemplateBinding Background}">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="6"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="6"/>
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition Height="6"/>
							<RowDefinition Height="*"/>
							<RowDefinition Height="6"/>
						</Grid.RowDefinitions>
						<Border Grid.RowSpan="3" Grid.ColumnSpan="3" BorderBrush="White" BorderThickness="1" Margin="0,1,0,0"/>
						<Border Grid.RowSpan="3" Grid.ColumnSpan="3" BorderBrush="#7F1A1A1A" BorderThickness="1" Margin="1,0,1,1"/>
						<ContentPresenter Grid.Column="1" Margin="{TemplateBinding Padding}" Grid.Row="1" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<ControlTemplate x:Key="CretaGroupBoxC4" TargetType="{x:Type GroupBox}">
		<Grid SnapsToDevicePixels="true" Background="{StaticResource CretaprintC4_Gris_Fondo_br}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="6"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="6"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="32"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="6"/>
			</Grid.RowDefinitions>	
			<Rectangle Fill="{DynamicResource CretaprintC4_GrisMedio_br}" Grid.ColumnSpan="3"/>
			<TextBlock Text="{TemplateBinding Header}" x:Name="Texto" HorizontalAlignment="Left" Grid.Column="1" FontFamily="Arial" Margin="5" VerticalAlignment="Center" Foreground="{DynamicResource CretaprintC4_GrisClaro_Trazos_br}" FontSize="14"/>
			<Border Grid.RowSpan="3" Grid.ColumnSpan="3" BorderBrush="{DynamicResource CretaprintC4_GrisMedio_br}" BorderThickness="1" Margin="0"/>
			<ContentPresenter Grid.Column="1" Margin="{TemplateBinding Padding}" Grid.Row="1" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
		</Grid>
	</ControlTemplate>
	<!-- Resource dictionary entries should be defined here. -->
</ResourceDictionary>