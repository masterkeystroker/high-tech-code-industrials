<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CretaBase"
    xmlns:lex="http://schemas.root-project.org/xaml/presentation"
	mc:Ignorable="d"
	x:Class="CretaBase.CretaMessageBoxCtrlC4"
	x:Name="UserControl"
	d:DesignWidth="720" d:DesignHeight="920" Width="800">
	<UserControl.Resources>
		<!--Hides control if boolean value is true-->
        <local:BooleanToVisibilityConverter x:Key="HiddenIfTrue" ValueWhenTrue="Hidden" ValueWhenFalse="Visible"/>
        <!--Hides control if boolean value is false-->
        <local:BooleanToVisibilityConverter x:Key="HiddenIfFalse" ValueWhenTrue="Visible" ValueWhenFalse="Hidden"/>
        <!--Collapses control if boolean value is true-->
        <local:BooleanToVisibilityConverter x:Key="CollapsedIfTrue" ValueWhenTrue="Collapsed" ValueWhenFalse="Visible"/>
        <!--Collapses control if boolean value is false-->
        <local:BooleanToVisibilityConverter x:Key="CollapsedIfFalse" ValueWhenTrue="Visible" ValueWhenFalse="Collapsed"/>
	</UserControl.Resources>
	<Grid Margin="0,0,0,100" VerticalAlignment="Center" MinWidth="{Binding MinWidth}" Height="auto" HorizontalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions> 

		<Rectangle Style="{DynamicResource CretaRectangleBackgroundC4}" Grid.RowSpan="2" />
		
		
		<Grid Margin="10,10,10,5" MaxHeight="350" MinHeight="{Binding MinHeightContainer}" >
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions> 
			
			<Rectangle Fill="{DynamicResource CretaprintC4_Gris_Fondo_br}" Stroke="{DynamicResource CretaprintC4_GrisMedio_br}" Grid.ColumnSpan="2" Margin="0" />
			
			<ContentControl Style="{StaticResource Icon_Warning}" Visibility="{Binding IsWarningImgVisible,Converter={StaticResource CollapsedIfFalse}}" Margin="20,10,10,10" VerticalAlignment="Center">
				<ContentControl.Foreground>
					<SolidColorBrush Color="{DynamicResource CretaprintC4_Naranja}"/>
				</ContentControl.Foreground>
			</ContentControl>
			<ContentControl Style="{StaticResource Check_Bad}" Visibility="{Binding IsErrorImgVisible,Converter={StaticResource CollapsedIfFalse}}" Margin="20,10,10,10" 
				Foreground="{StaticResource CretaprintC4_Rojo_Claro_br}" local:CretaProperties.Scale="4" VerticalAlignment="Center"/>
				<ScrollViewer VerticalScrollBarVisibility="auto"  Grid.Column="1">
					<TextBlock Text="{Binding StrMessage}" HorizontalAlignment="Left" TextWrapping="Wrap" Style="{DynamicResource CretaTextBlockC4}" Margin="20,25,25,25" FontSize="14" VerticalAlignment="Center"/>
				</ScrollViewer>
		</Grid> 
		
		
		<StackPanel x:Name="Ok" Margin="10,10,10,5" HorizontalAlignment="Center" Visibility="{Binding IsOkVisible,Converter={StaticResource CollapsedIfFalse}}" Grid.RowSpan="2" Orientation="Horizontal" Grid.Row="1">
			<Button Margin="0" x:Name="Btn_Ok" Command="{Binding CretaMsgBoxResultCommand}" Width="100" Height="100" Style="{DynamicResource CretaButtonRoundC4}" 
					Tag="{lex:LocText CretaBase:Strings:G_OK}" Background="{DynamicResource BotonDegradadoVerde}" >
				<ContentControl Style="{DynamicResource Check_Ok}" Foreground="White" local:CretaProperties.Scale="2.5"/>
                <local:CretaProperties.Content2>
                    <ContentControl Style="{DynamicResource Check_Ok}" Foreground="White" local:CretaProperties.Scale="2.5"/>
				</local:CretaProperties.Content2>
			</Button>
		</StackPanel>
		<StackPanel x:Name="Yes_No_Cancel" Margin="5" HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="1">
			<Button Margin="10,10,10,5" x:Name="YES" Command="{Binding CretaMsgBoxResultCommand}" CommandParameter="YES" 
					Visibility="{Binding IsYesNoVisible,Converter={StaticResource CollapsedIfFalse}}" Width="100" Height="100" Style="{DynamicResource CretaButtonRoundC4}" 
					Tag="{lex:LocText CretaBase:Strings:G_YES}" Background="{DynamicResource BotonDegradadoVerde}" >
				<ContentControl Style="{DynamicResource Check_Ok}" Foreground="White" local:CretaProperties.Scale="2.5"/>
                <local:CretaProperties.Content2>
                    <ContentControl Style="{DynamicResource Check_Ok}" Foreground="White" local:CretaProperties.Scale="2.5"/>
				</local:CretaProperties.Content2>
			</Button>
            <Button Margin="10,10,10,5" x:Name="NO" Command="{Binding CretaMsgBoxResultCommand}" CommandParameter="NO" 
					Visibility="{Binding IsYesNoVisible,Converter={StaticResource CollapsedIfFalse}}" Width="100" Height="100" 
					Style="{DynamicResource CretaButtonRoundC4}" Tag="{lex:LocText CretaBase:Strings:G_NO}" Background="{DynamicResource BotonDegradadoRojo}">
            	<ContentControl Style="{DynamicResource Check_Bad}" Foreground="White" local:CretaProperties.Scale="3"/>
                <local:CretaProperties.Content2>
                	<ContentControl Style="{DynamicResource Check_Bad}" Foreground="White" local:CretaProperties.Scale="3"/>
				</local:CretaProperties.Content2>
			</Button>
			<Button Margin="50,10,10,5" x:Name="CANCEL"  Command="{Binding CretaMsgBoxResultCommand}" CommandParameter="CANCEL" 
					Visibility="{Binding IsCancelVisible,Converter={StaticResource CollapsedIfFalse}}" Width="100" Height="100" 
					Style="{DynamicResource CretaButtonRoundC4}" Tag="{lex:LocText CretaBase:Strings:G_CANCEL}" Background="{DynamicResource BotonDegradadoGris}">
				<ContentControl Style="{DynamicResource Check_Bad}" Foreground="White" local:CretaProperties.Scale="3"/>
                <local:CretaProperties.Content2>
                	<ContentControl Style="{DynamicResource Check_Bad}" Foreground="White" local:CretaProperties.Scale="3"/>
				</local:CretaProperties.Content2>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>